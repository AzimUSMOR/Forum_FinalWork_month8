@model lesson62.ViewModels.CommentsViewModel

@foreach (var c in Model.Comments)
{
    <div class="row mb-3">
        <div class="col-2"><img class="w-100 h-auto" src="@c.User.Avatar" /><div>@c.User.UserName</div></div>
        <div class="col-8">@c.WriteTime <br /> @c.Body</div>
    </div>
}

@if (Model.pageViewModel.HasPreviousPage)
{
    <a calss="btn btn-default" asp-action="Index" asp-route-page="@(Model.pageViewModel.PageNumber - 1)">
        <i class="gliphicon gltphicon-chervon-left">Назад</i>
    </a>
}
@if (Model.pageViewModel.HasNextPage)
{
    <a calss="btn btn-default" asp-action="Index" asp-route-page="@(Model.pageViewModel.PageNumber + 1)">
        <i class="gliphicon gltphicon-chervon-right">Вперед</i>
    </a>
}